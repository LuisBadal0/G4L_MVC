@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-body bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2 fw-bold">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductName" disabled type="text" class="form-control bg border-0 shadow" />
                    <label asp-for="ProductName" class="ms-2 text-dark"></label>
                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2 text-dark"></label>

                </div> 
                <div class="row">
                    <div class="col-6 col-md 3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-arrow-bar-left"></i>Back to List</a>
                    </div>
                    <div class="col-6 col-md 3">
                        <button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash3"></i> Delete</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

