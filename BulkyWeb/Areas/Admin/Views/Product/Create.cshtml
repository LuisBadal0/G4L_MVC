@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-body bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2 fw-bold">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* Summarize all errors *@
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductName" type="text" class="form-control bg border-0 shadow" />
                    <label asp-for="ProductName" class="ms-2 text-dark"></label>

                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Developer" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Developer" class="ms-2 text-dark"></label>

                    <span asp-validation-for="Developer" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Publisher" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Publisher" class="ms-2 text-dark"></label>

                    <span asp-validation-for="Publisher" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" type="text" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2 text-dark"></label>

                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2 text-dark"></label>

                    <span asp-validation-for="ListPrice" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2 text-dark"></label>

                    <span asp-validation-for="Price50" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2 text-dark"></label>

                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md 3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-arrow-bar-left"></i>Back to List</a>
                    </div>
                    <div class="col-6 col-md 3">
                        <button type="submit" class="btn btn-primary form-control">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



    @*Search for further valitations(Client Side)*@
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}