@using System.Globalization
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageURL" class="card-img-top rounder" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 opacity-75 text-uppercase text-center">@product.ProductName</p>
                                <p class="cardcard-title text-warning text-center">by <b></b>@product.Developer</p>
                            </div>
                            <div class="pl-1">
                                <p class="h5 opacity-75 text-center fw-bold">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c", new CultureInfo("pt-PT"))
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="h5 opacity-75 text-center">
                                    As low as:
                                    <span class="fw-bold" style="color:yellow;">
                                        @product.Price100.ToString("c", new CultureInfo("pt-PT"))
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="pl-1">
                            <a href="#" class="btn btn-primary bg-gradient border-0 form-control">
                                More
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>